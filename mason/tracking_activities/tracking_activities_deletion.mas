<%args>
$trial_id
</%args>

<& /util/import_javascript.mas, classes => [ 'jquery', 'jquery.dataTables' ] &>
<& /util/import_css.mas, paths => ['/documents/inc/datatables/jquery.dataTables.css'] &>

<&| /page/info_section.mas, id=>'delete_tracking_identifier_section', title => 'Delete tracking identifiers', subtitle => '<font color="red">Deletion cannot be undone</font>', collapsible=>1, collapsed=>1 &>
    <div class="well well-sm">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-hover table-bordered" id="tracking_identifier_deletion_table">
                </table>
            </div>
        </div>
        <button class="btn btn-default" id="delete_all_tracking_identifiers" role="button">Delete all tracking identifiers in this project</button><br/><br/>
    </div>
</&>

<&| /page/info_section.mas, id=>'delete_tracking_project_section', title => 'Delete tracking project', subtitle => '<font color="red">Deletion cannot be undone. Please delete tracking identifiers in this project first</font>', collapsible=>1, collapsed=>1 &>
    <div class="well well-sm">
        <div class="panel panel-default">
            <div class="panel-body">
                <button class="btn btn-default" id="delete_tracking_project" role="button">Delete tracking project</button><br/><br/>
            </div>
        </div>
    </div>
</&>


<script>

jQuery(document).ready(function(){

    var project_id = "<%$trial_id%>";

    jQuery('#delete_tracking_identifier_section_onswitch').click(function(){

        var tracking_identifier_deletion_table = jQuery('#tracking_identifier_deletion_table').DataTable({
            'ajax':'/ajax/tracking_activity/all_project_tracking_identifiers/'+project_id,

            columns: [
                { title: "Tracking Identifier", "data": null, "render": function ( data, type, row ) { return "<a href='/activity/details/"+row.identifier_stock_id+"'>"+row.identifier_name+"</a>"; } },
                { title: "Delete", "data": "null", "render": function ( data, type, row ) { return "<a onclick='deleteIdentifier("+row.identifier_stock_id+")'>Delete</a>"; } },
            ]
        });
    });

});

function deleteIdentifier(identifier_stock_id){

    var confirmation = confirm('Are you sure you want to delete this tracking identifier? The deletion cannot be undone.');

    if (confirmation) {
        jQuery.ajax({
            url: '/ajax/tracking_activity/delete_identifier',
            data: {'identifier_stock_id' : identifier_stock_id},
            method: 'POST',
            destroy: true,
            beforeSend: function(response) {
                jQuery('#working_modal').modal('show');
            },
            success: function(response) {
                jQuery('#working_modal').modal('hide');
                if (response.success == 1) {
                    alert('Deletion was successful');
                    location.reload();
                }
                if (response.error) {
                    alert(response.error);
                }
            },
            error: function(response) {
                jQuery('#working_modal').modal('hide');
                alert('An error occurred during deletion');
            }
        });
    }
}


</script>
